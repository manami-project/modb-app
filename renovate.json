{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 20,
  "hostRules": [
    {
      "matchHost": "maven.pkg.github.com",
      "hostType": "maven",
      "token": "{{ secrets.RENOVATE_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Group all Kotlin org.jetbrains.kotlin updates into one PR (monorepo style)",
      "matchManagers": [
        "gradle"
      ],
      "matchFileNames": [
        "gradle/libs.versions.toml"
      ],
      "groupName": "kotlin monorepo",
      "groupSlug": "kotlin-monorepo",
      "separateMultipleMajor": false,
      "matchPackageNames": [
        "/^org\\.jetbrains\\.kotlin/"
      ]
    }
  ]
}
